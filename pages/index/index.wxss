/*隐藏滚动条*/

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

/*设置背景颜色*/
page{
  background-color: white;
}

.index-img{
  height:400rpx;
  width:100%;
  overflow:hidden;
  border-radius: 30rpx;
  margin:10rpx;
}

.title{
  font-size: 16px;
  font-family: 黑体;
  font-weight: 700;
  margin:10rpx 0rpx 10rpx 0rpx;
}

.second_title{
  font-size: 14px;
  color: #949494;
}




/* pages/home/home.wxss */


.view-title{
  padding-left: 10px;
  border-top: 1px solid #e2e2e2;
  border-bottom: 1px solid #8DB5D0;
  height: 35px;
  display: flex;
  line-height: 35px;
  flex: 1;
  width: 100%;
  background-color: #fff
}

.float {
  position: fixed;
  /* float: top; */
  top: 0px;
}

.title-select{
  color: #276692;
}

.title-default{
  color: #333;
}

.view-title view{
  margin: 0 10px;
  color: #e2e2e2;
}

.view-item{
  border-bottom: 0.6px solid #e4e4e4;
  /* display: flex; */
  /* justify-content: flex-start; */
  padding: 15px;
}

.view-item view:first-child{
  font-weight: bold;
  margin-bottom: 5px;
  font-size: 15px;
}

.view-item view:nth-child(2){
  color: #545C63;
  margin-bottom: 5px;
}

.view-item view:nth-child(3){
  display: flex;
  color: #999;
}



